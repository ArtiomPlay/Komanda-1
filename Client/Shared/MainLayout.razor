@inherits LayoutComponentBase
@inject Projektas.Client.Interfaces.IAccountService AccountServices
@inject Projektas.Client.Interfaces.IAccountAuthStateProvider AuthStateProvider
@implements IDisposable

<div class="page">
	<div class="top-row px-4">
		<button class="toggle-sidebar" @onclick="ToggleSidebar">☰</button>
		<a class="title" href="">Projektas</a>
		<div class="account">
			@if(username==null) {
				<a class="account_text" href="account">Log In/Sign Up</a>
			} else {
				<a class="account_text" href="account">@username</a>
			}
		</div>
	</div>
	<div class="page middle">
		<div class="sidebar @(isSidebarCollapsed ? "collapsed" : "")">
			<NavMenu/>
		</div>
		<main>
			<article class="content px-4">
				@Body
			</article>
		</main>
	</div>
	<div class="bottom-row px-4"></div>
</div>
