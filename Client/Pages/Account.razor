@page "/account"
@inject NavigationManager Navigation

<PageTitle>Account</PageTitle>

<div class="row">
	@if(username!=null) {
		<button class="submit" @onclick="LogOffEvent">Log Off</button>
	} else {
		<div class="px-3 login col">
			<div class="type">
				Log In
			</div>
			<label class="textbox" for="accUsername">
				Username: <input type="text" name="accUsername" @bind="@accountUsername"/>
			</label>
			<label class="textbox" for="accPassword">
				Password: <input type="password" name="accPassword" @bind="@accountPassword" />
			</label>
			<button class="submit" @onclick="LogInEventAsync">Submit</button>
			@if(isFieldsFilled==false) {
				<div class="warning">
					Not all fields are filled!
				</div>
			} else if(incorectLogIn) {
				<div class="warning">
					Incorect Usename or Password!
				</div>
			}
			@if(username!=null) {
				<div class="warning">
					Logged In
				</div>
			}
		</div>
		<div class="px-3 singup col">
			<div class="type">
				Sign Up
			</div>
			<label class="textbox" for="accName">
				Name: <input type="text" name="accName" @bind="@newAccountName"/>
			</label>
			<label class="textbox" for="accSurname">
				Surname: <input type="text" name="accSurname" @bind="@newAccountSurname"/>
			</label>
			<label class="textbox" for="accUsername">
				Username: <input type="text" name="accUsername" @bind="@newAccountUsername" @oninput="UsernameChangeAsync"/>
			</label>
			<label class="textbox" for="accPassword">
				Password: <input type="password" name="accPassword" @bind="@newAccountPassword" />
			</label>
			<button class="submit" @onclick="SignUpEventAsync">Submit</button>
			@if(isUsernameNew==false) {
				<div class="warning">
					This username is in use
				</div>
			} else if(isNewFieldsFilled==false) {
				<div class="warning">
					Not all fields are filled!
				</div>
			}
		</div>
	}
</div>